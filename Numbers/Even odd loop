import java.util.Scanner;
class Task1
{
public static void main(String args[])
{
int addition = 0;
int input = 0;
Scanner sc = new Scanner(System.in);
do
{

System.out.print("Enter the number : ");
input = sc.nextInt();
addition+=input;
}while((input%2)==0);
System.out.println("Sum of the numbers is : "+addition );
}
}
